.card.width-50.center
  .card-content
    %h2 Log in
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .columns
        .column.is-full
          .field
            = f.label :email
            .control
              = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'input is-primary'
      .columns
        .column.is-full
          .field
            = f.label :password
            %br/
            .control
              = f.password_field :password, autofocus: true,autocomplete: "current-password", class: 'input is-primary'
      .columns
        .column.is-full
          - if devise_mapping.rememberable?
            .field
              = f.check_box :remember_me
              = f.label :remember_me, 'Recuerdame'
      .columns
        .column.is-full
          .actions
            = f.submit 'Log in', class: 'button is-primary pull-right'
    = render "devise/shared/links"
